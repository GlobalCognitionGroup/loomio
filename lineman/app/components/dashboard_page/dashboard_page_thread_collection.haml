%section.dashboard-page-threads-container{ng-show: 'any()', role: 'region', aria-label: "{{ name | translate }}"}
  .dashboard-page-group-name{ng-if: 'group', aria-hidden: 'true'}
    %img.selector-list-item-group-logo.pull-left{src: "{{group.logoUrl()}}", aria-hidden: 'true'}>
    %h2.dashboard-page-group-name
      %a{href: '/g/{{group.key}}'} {{group.name}}
  .dashboard-page-date-range{ng-if: '!group', translate: 'dashboard_page.threads_from.{{name}}', aria-hidden: 'true'}
  .dashboard-page-threads
    %dashboard_page_thread{discussion: 'thread', ng-repeat: 'thread in filteredThreads() | limitTo:limit'}
    .dashboard-page-show-more{ng-show: 'canExpand()'}
      %a{translate: 'dashboard_page.load_more', ng-click:'expanded = true', href: '#'}