.proposal-actions-dropdown.dropdown.pull-right
  %a.dropdown-toggle.fat-finger{href: '#'}
    %i.fa.fa-chevron-down
  .dropdown-menu.dropdown-menu-right{role: 'menu'}
    %ul.dropdown-menu-items
      %li.dropdown-menu-item{ng-if: 'canEditProposal()', ng_click: 'editProposal()'}
        .dropdown-menu-item-label
          %span{translate: 'proposal_expanded.edit_proposal'}

      %li.dropdown-menu-item{ng-if: '!canEditProposal() && canCloseOrExtendProposal()'}
        %a.dropdown-menu-item-label{href:'#', ng_click: 'extendProposal()'}
          %span{translate: 'proposal_expanded.extend_proposal'}

      %li.dropdown-menu-item{ng-if: 'canCloseOrExtendProposal()'}
        %a.dropdown-menu-item-label{href:'#', ng_click: 'closeProposal()'}
          %span{translate: 'proposal_expanded.close_proposal'}
